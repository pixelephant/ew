			<a href="/<%= offer.slug %>" class="box <%= i == 4 ? 'full' : 'quarter' %>">
				<div class="inner">
					<div class="ribbon"><%= offer.travel_name %></div>
					<%= image_tag special_image(offer.id), :alt => offer.travel_name %>
				</div>
			</a>
			<%= '</div>'.html_safe if i == 3 || i == 4 || i == 8 %>
		<% end %>
