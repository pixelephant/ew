<div id="country-selector" class="selector">
	<h3>Országok</h3>
	<% @selected_country ? t = '' : t = ' active' %>
	<a href="/list" class="country<%= t %>">Összes <span class="count"><%= @traveloffers.count %></span></a>
	<% @p_countries.each do |country| %>
		<% @selected_country == country.id.to_s ? t = ' active' : t = '' %>
		<!-- <a href="/uticelok/<%= country.slug %>" class="country<%= t %>"><%= country.name %> <span class="count"><%= country.travel_offers_count %></span></a> -->
		<a href="<%= url_for(params.merge(:filters => {:country => country.id})) %>" class="country<%= t %>"><%= country.name %> <span class="count"><%= country.travel_offers_count %></span></a>
	<% end %>
	<a href="#" id="more-countries">Továbbiak <span>&#9660;</span></a>
</div>
