<%= form_for 'filters', :html => {:id => 'filter-form'} do |f| %>
	<h3>Szűkítse az utakat</h3>
	<fieldset>
		<legend>Utazás időpontja</legend>
		<div id="filter-precise-row">
			<div>
				<%= f.label "arrival", "Érkezés" %>
				<%= f.text_field "arrival", :class => "datepicker", :type => "date" %>
			</div>
			<div>
				<%= f.label "departure", "Távozás" %>
				<%= f.text_field "departure", :class => "datepicker", :type => "date" %>
				<span class="left">(<span id="filter-between">-</span> éjszaka)</span>
			</div>
			<div>
				<%= f.label "flexibility", "Rugalmasság" %>
				<%= f.select "flexibility", options_for_select([['+/- 1 nap', 1], ['+/- 3 nap', 3],['+/- 1 hét', 7],['Nincs', 0]]) %>
			</div>
		</div>
		<div id="filter-imprecise-row">
			<%= f.label "imprecise", "Körülbelül mikor utaznék" %>
			<%= f.select "imprecise", (grouped_options_for_select([['Hónapok', monthsForSelect],['Időszakok', periodsForSelect]]) + options_for_select([['Nem tudom', 0]])) %>
		</div>
		<div>
			<%= f.label "no_date", "Nincs pontos dátumom" %>
			<%= f.check_box "no_date" %>
		</div>
	</fieldset>
	<fieldset>
		<legend>Utazás max. ára/fő</legend>
		<div>
			<%= f.label "price_50000", ("50.000 Ft " + (f.radio_button "price", '50000')).html_safe %>
			<%= f.label "price_150000", ("150.000 Ft " + (f.radio_button "price", '150000')).html_safe %>
			<%= f.label "price_250000", ("250.000 Ft " + (f.radio_button "price", '250000')).html_safe %>
			<%= f.label "price_550000", ("550.000 Ft " + (f.radio_button "price", '550000')).html_safe %>
		</div>
	</fieldset>
	<fieldset>
		<legend>Úticél</legend>
		<div>
			<%= f.label "country", "Ország" %>
			<%= f.select "country", [['-- Mindegy --', 0]] + Country.all.collect {|p| [ p.name, p.id ] } %>
		</div>
		<div>
			<!-- Ajaxosan -->
			<label for="filters_region">Régió</label>
			<select name="filters[region]" id="filters_region">
				<option value="0">-- Mindegy --</option>
			</select>
			<label for="filters_city">Város</label>
			<select name="filters[city]" id="filters_city">
				<option value="0">-- Mindegy --</option>
			</select>
			<!-- Ajaxosan -->
		</div>		
	</fieldset>
	<fieldset class="collapsible">
		<h4 class="legend">Program típusok <a href="#">&darr;</a></h4>
		<div class="collapse">
			<!-- <div>
				<label for="all-program">Összes <input class="all" type="radio" name="program" id="all-program" checked></label>
			</div> -->
			<%= f.label "program-type_1", ("Összes " + (f.radio_button "program-type", '1', :class => "all")).html_safe %>
			<!-- <div><label for="only-program">Csak az alábbiak <input class="only" type="radio" name="program" id="only-program"></label></div> -->
			<%= f.label "program-type_0", ("Csak az alábbiak " + (f.radio_button "program-type", '0', :class => "only")).html_safe %>
			<div>
				<!-- <label for="">1<input type="checkbox" name="" id="" disabled checked></label>
				<label for="">2<input type="checkbox" name="" id="" disabled checked></label> -->
				<% @program_types.each do |program_type| %>
				<%= f.label 'filters[program_type][]', (program_type.name + (check_box_tag "filters[program_type][]", program_type.id, :value => program_type.id)).html_safe %>
				<% end %>	
			</div>
		</div>
	</fieldset>
	<%= f.submit 'Küldés' %>
<% end %>